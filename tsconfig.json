{
    "compilerOptions": {
        "target": "ES2018",
        "module": "CommonJS",
        "strictNullChecks": true,
        "sourceRoot": "src",
        "sourceMap": true,
        "outDir": "build",
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "compileOnSave": true,
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}